// https://github.com/buzinas/tslint-eslint-rules

{
  "defaultSeverity": "error",
  "extends": [
    "tslint-config-airbnb",
    "tslint-react"
  ],
  "jsRules": {},
  "rules": {
    "ter-arrow-parens": true,
    "no-console": false,
    "eofline": true,
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 2
      }
    ],
    "triple-equals": [
      true
    ],
    "ter-arrow-spacing": [
      true
    ],
    "ter-no-irregular-whitespace": [
      true
    ],
    "object-literal-sort-keys": false,
    "object-literal-shorthand": true,
    "variable-name": [
      "allow-pascal-case"
    ],
    "import-name": [
      false
    ],
    "max-line-length": [
      true,
      180
    ],
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false,
    "function-name": false,
    "align": [
      true,
      "parameters"
    ],
    "no-consecutive-blank-lines": [
      true
    ],
    "no-trailing-whitespace": true,
    "no-multi-spaces": [
      true
    ],
    "no-var-keyword": true,
    "prefer-const": true,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "always",
          "imports": "ignore"
        },
        "singleline": "never"
      }
    ]
  },
  "radix": true,
  "rulesDirectory": []
}