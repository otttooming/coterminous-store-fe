{
  // https://github.com/buzinas/tslint-eslint-rules

  "defaultSeverity": "error",
  "jsRules": {},
  "rules": {
    "ter-arrow-parens": true,
    "prettier": true,
    "no-console": true,
    "object-literal-sort-keys": false,

    "no-var-keyword": true,
    "prefer-const": true,
    "ordered-imports": false,
    "interface-name": false,
    "member-access": false
  },
  "radix": true,
  "rulesDirectory": ["tslint-plugin-prettier", ".prettierrc"],
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-eslint-rules",
    "tslint-config-prettier"
  ]
}
