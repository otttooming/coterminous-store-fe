{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "lib": ["dom", "es2015", "es2017"],
    "experimentalDecorators": true,
    "outDir": "dist/",
    "sourceMap": true
